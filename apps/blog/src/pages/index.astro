---
import BaseLayout from "../layouts/BaseLayout.astro";
import { siteConfig, mailtoHref } from "../config/site";
---

<BaseLayout
  title={`${siteConfig.site.author}`}
  description={siteConfig.site.tagline}
  canonical="/"
>
  <section
    class="min-h-[60vh] flex flex-col items-center justify-center text-center gap-6"
  >
    <span
      class="inline-flex items-center gap-2 rounded-full border border-black/10 dark:border-white/10 px-4 py-1 text-sm uppercase tracking-[0.3em] text-[oklch(var(--accent))]"
    >
      Coming Soon
    </span>
    <h1 class="text-4xl font-semibold sm:text-5xl">
      Alexander Sumer is building something new
    </h1>
    <p class="max-w-xl text-lg opacity-80">
      A refreshed home for engineering notes, deep dives, and projects is on the
      way. In the meantime you can explore the blog archive.
    </p>
    <div class="flex flex-wrap items-center justify-center gap-4">
      <a
        href="/blog/"
        class="rounded-full bg-[oklch(var(--accent))] px-6 py-3 text-base font-medium text-white shadow hover:opacity-90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
      >
        Read the blog
      </a>
      <a
        href={mailtoHref()}
        class="rounded-full border border-black/10 px-6 py-3 text-base font-medium dark:border-white/10"
      >
        Say hello
      </a>
    </div>
  </section>
</BaseLayout>
